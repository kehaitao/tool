.nav-bar {
  position: relative;
  z-index: 10;
  height: 90rpx;
  white-space: nowrap;
  background-color: #fff;
}
.nav-bar .nav-item {
    display: inline-block;
    width: 150rpx;
    height: 90rpx;
    text-align: center;
    line-height: 90rpx;
    font-size: 28rpx;
    position: relative;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 600;
    color: #9CA4AC;
    line-height: 90rpx;
}
.nav-bar .nav-item:after {
      content: '';
      width: 0;
      height: 0;
      border-bottom: 6rpx solid #669933;
      position: absolute;
      left: 50%;
      bottom: 0;
      -webkit-transform: translateX(-50%);
          -ms-transform: translateX(-50%);
              transform: translateX(-50%);
      -webkit-transition: .3s;
      -o-transition: .3s;
      transition: .3s;
}
.nav-bar .current {
    color: #333;
    font-weight: bold;
    font-size: 36rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: bold;
    line-height: 90rpx;
}
.nav-bar .current:after {
      width: 50%;
}
